---
import PageLayout from "../layouts/PageLayout.astro";
import ProjectsList from "../components/ProjectsList.astro";
import Services from "../components/Services.astro";
import Cta from "../components/Cta.astro";
import ScheduleCta from "../components/ScheduleCta.astro";
import Ticker from "../components/ui/Ticker.astro";

const tickerItems = [
    "Ticketmaster",
    "Ticmas",
    "NBCUniversal",
    "Batch",
    "Expedia",
    "MercadoLibre",
    "Inale",
    "Lenovo",
];
---

<PageLayout title="Grow Your Startup | Growth Engineering & Product Development" description="Expert growth engineer helping startups scale through product strategy and experimentation. Book a call to accelerate your growth.">
	<section id="hero" class="pt-64 pb-32">
    <h1 class="text-4xl md:text-6xl font-bold mb-16 tracking-wider">i help startups grow</h1>
		<p class="text-lg font-normal tracking-normal text-muted-foreground mt-4 mb-8 max-w-2xl">
      combining product thinking with experimentation strategy to build products users obsess with
		</p>
     <div class="text-base tracking-normal py-8">
		  <p class="text-muted-foreground mb-2">interested in working together?</p>
       <ScheduleCta text="book a call â†’"/>
     </div>
     <div class="mt-24">
       <Ticker items={tickerItems} />
     </div>
	</section>

	<section class="grid md:grid-cols-3 gap-8 my-32">
		<div>
			<h2 class="text-lg font-bold mb-2">product + growth</h2>
			<p class="text-lg text-muted-foreground">i understand both sides of building and scaling</p>
		</div>
		<div>
		  <h2 class="text-lg font-bold mb-2">hands-on</h2>
			<p class="text-lg text-muted-foreground">i ship my own products, not just theory</p>
		</div>
		<div>
			<h2 class="text-lg font-bold mb-2">opinionated</h2>
			<p class="text-lg text-muted-foreground">i believe in shipping fast and learning from users</p>
	  </div>
	</section>

	<section id="projects" class="py-32 border-t border-border/50">
		<h2 class="text-lg font-bold mb-12 text-muted-foreground">in-house products</h2>
		<ProjectsList />
	</section>

	<Services />

	<Cta />
</PageLayout>
