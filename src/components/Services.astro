import ScheduleCta from "./ScheduleCta.astro";

const services = [
  {
    title: "Fractional CTO",
    description: "Technical leadership and product strategy. I help you build the right product, the right way.",
    cta: "discuss your tech stack",
    calLink: "ggofri/tell-me-about-your-product",
    namespace: "cto",
  },
  {
    title: "Growth Engineer",
    description: "Product-led growth strategy and execution. From acquisition to retention, I help you scale.",
    cta: "let's grow together",
    calLink: "ggofri/what-is-your-growth-objective",
    namespace: "growth",
  },
  {
    title: "Cofounder",
    description: "Have an idea? Let's talk. I'm looking for the next thing to build.",
