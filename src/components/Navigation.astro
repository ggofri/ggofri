---
import SocialList from "./social/SocialList.astro";
const pathname = Astro.url.pathname;
---

<div class="border-b border-border/50">
  <div class="max-w-3xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="text-sm font-semibold hover:opacity-70 transition-opacity">
      ggofri
    </a>
    <div class="flex items-center gap-6">
      <a
        href="/blog"
        class={`text-sm transition-opacity ${
          pathname === "/blog" ? "text-foreground font-medium" : "text-muted-foreground hover:text-foreground"
        }`}
      >
        blog
      </a>
      <a
        href="/journey"
        class={`text-sm transition-opacity ${
          pathname === "/journey" ? "text-foreground font-medium" : "text-muted-foreground hover:text-foreground"
        }`}
      >
        journey
      </a>

      <div class="flex items-center gap-3 ml-4">
        <SocialList />
      </div>
    </div>
  </div>
</div>