---
import { getCollection } from "astro:content";

const experiments = await getCollection("labs");
---

<section class="mb-8">
	<h2>ðŸ§ª Experiments</h2>

	<ul class="grid gap-4 mt-4">
		{
			experiments.map((experiment) => (
				<li>
					<a
						href={`/labs/${experiment.id}`}
						class="block h-12 w-11/12 bg-neutral-800 hover:bg-neutral-700 rounded-lg px-4 py-2 transition-colors duration-200 border border-neutral-700 hover:border-neutral-600"
					>
						<div class="flex items-center h-full">
							{experiment.data.status && (
								<span class="text-xs text-neutral-400 mr-2">
									{experiment.data.status}
								</span>
							)}
							<span class="font-medium text-white truncate">
								{experiment.data.title}
							</span>
							<span class="text-neutral-400 ml-2 truncate">
								- {experiment.data.description}
							</span>
						</div>
					</a>
				</li>
			))
		}
	</ul>
</section>
