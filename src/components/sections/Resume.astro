---
import { render } from 'astro:content';
import { getEntry } from 'astro:content';

const resume = await getEntry('resume', 'main');
const { Content } = resume ? await render(resume) : { Content: null };
---
<div class="mb-8">
	<a
		href="/Julian_Ramirez_Resume.pdf"
		download="Julian_Ramirez_Resume.pdf"
		class="inline-block px-6 py-3 bg-foreground text-background font-semibold rounded-lg hover:opacity-90 transition-opacity"
	>
		Download Resume PDF
	</a>
</div>
<div class="resume-content">
	{Content && <Content />}
</div>
