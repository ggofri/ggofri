---
import { getCollection } from 'astro:content';

const futureItems = await getCollection('future');
---

<section class="mb-8">
	<h2>🗓️ Coming Up</h2>
	
	<div class="flex flex-col gap-6 md:flex-row md:gap-8">
		{futureItems.map((future) => (
			<div class="flex-1">
				<h3 class="font-bold mb-2">{future.data.quarter}</h3>
				<ul class="list-disc pl-6">
					{future.data.items.map((item) => (
						<li class="mb-1">
							{item.link ? (
								<a href={item.link}>{item.title}</a>
							) : (
								item.title
							)}
							{item.description && <> - {item.description}</>}
						</li>
					))}
				</ul>
			</div>
		))}
	</div>
</section>

